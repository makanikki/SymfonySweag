<div class="container">
    <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Username</td>
                        <td>Email</td>
                        <td>Status</td>
                        <td>ApiKey</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.enabled == 1 %}
                                    Enabled
                                {% else %}
                                    Banned
                                {% endif %}
                            </td>
                            <td>{{ user.apiKey }}</td>
                            <td>
                                <button class="btn btn-info">Refresh ApiKey</button>
                                {% if user.enabled == 1 %}
                                <button class="btn btn-warning">Ban</button>
                                {% else %}
                                <button class="btn btn-success">Unban</button>
                                {% endif %}
                                <button class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
    </div>
</div>
